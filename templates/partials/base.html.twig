{# Get all the config parameters from the theme's configuration file blueprints.yaml (configurable in the admin panel also)  #}
{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">  {# Default language from configuration file #}
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title> {# Page title from page header, if present #}

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    {# Get favicon from theme's config file if present, otherwise fall back on standard files in images folder #}
    {% set favicon_file = theme_config.favicon_file|first %} 
    {% if favicon_file %}
	<link rel="icon" type="{{ favicon_file.type }}" href="/{{ favicon_file.path }}" />
    {% else %}
	<link rel="icon" type="image/png" href="{{ url('theme://images/logo.png') }}" />
    {% endif %}

    {# Canonical URL for the page is always the page's url #}  
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {# Load appropriate stylesheet: use standard Bootstrap filesheet if default was chosen in config, otherwise load a Bootswatch sub-theme #}
    {% block stylesheets %}
	{% if theme_config.theme.stylesheet != 'default' %}
            {% do assets.addCss("theme://css/bootswatch/#{ theme_config.theme.stylesheet }/bootstrap.min.css", 100) %}
	{% else %}
            {% do assets.addCss('theme://css/bootstrap/bootstrap.min.css', 100) %}
	{% endif %}
	{% do assets.addCss('https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', 99) %}

	{# Load overriding custom style sheet #}
	{% do assets.addCss('theme://css/custom.css', 98) %}
    {% endblock %}
    {{ assets.css() }}

    <style>
     {# Move down content because we have a fixed navbar that is 50px tall. Use extra header padding set in config file #}
     body {
	 {% if theme_config.theme.adjust_header != 0 %}
	 padding-top: {{ 60 + theme_config.theme.adjust_header }}px;
	 {% else %}
	 padding-top: 60px;
	 {% endif %}
     }
     {# Use config's file footer's background's color #}
     {% if theme_config.footer.color_bg %}
     .footer-container { background-color: {{ theme_config.footer.color_bg }} }; 
     {% endif %}
    </style>
    {% block javascripts %}
        {% do assets.addJs('jquery', 100) %}
        {% do assets.add('theme://js/tether.min.js') %} {# Required by Bootstrap for placement of mouse hover hints and simila items #}

        {% do assets.add('theme://js/bootstrap/bootstrap.min.js') %}

    {% endblock %}
    {{ assets.js() }}

{% endblock head %}
</head>

{# This will output anything set in the body_classes variable of the page's frontmatter. #}
<body id="top" class="{{ page.header.body_classes }}">

{# Styling and content of the header section of the page #}    
{% block header %}
    {# Navigation bar configuration #}
    {% if theme_config.navbar.background_color %}
	{% set navbar_style = "style=\"background-color: #{theme_config.navbar.background_color}\"" %}
	{% set navbar_bg = '' %}
    {% elseif theme_config.navbar.background and theme_config.navbar.background != 'default' %}
	{% set navbar_bg = theme_config.navbar.background %}
	{% set navbar_style = '' %}
    {% else %}
	{% set navbar_bg = 'bg-primary' %}
	{% set navbar_style='' %}
    {% endif %}
    <nav class="navbar navbar-toggleable-md {{ theme_config.navbar.invert ? 'navbar-inverse' : 'navbar-light' }} fixed-top {{ navbar_bg }}" {{ navbar_style }}>
	<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	</button>

	{% set site_logo = theme_config.theme.file_logo|first %}
	<a class="navbar-brand " href="{{ base_url == '' ? '/' : base_url }}">
	    {% if site_logo %}
		<img src="/{{ site_logo.path }}" />&nbsp;
	    {% endif %}
	    {{ config.site.title }}
	</a>
	<div class="collapse navbar-collapse" id="navbarsExampleDefault">

	    {# Include menus created by Grav in the navigation template #}
	    {% block header_navigation %}		
		{% include 'partials/navigation.html.twig' %}
	    {% endblock header_navigation%}        
	</div>
    </nav>
{% endblock header %}


{% block body %}
    <section id="body">
        <div class="container wrapper padding" style="padding-bottom: 10px;">
            {% block content %}{% endblock %}
        </div>
    </section>
{% endblock %}


{% block footer %}
    {% include 'partials/footer_container.html.twig' %}
    {% include 'partials/subfooter_container.html.twig' %}
{% endblock %}

{% block bottom %}
    {{ assets.js('bottom') }}
{% endblock %}

</body>
