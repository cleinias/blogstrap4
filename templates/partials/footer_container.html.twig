<div class="footer-container" style="{% if theme_config.footer.color_fg %}color: {{ theme_config.footer.color_fg }};{% endif %}">
  <div class="container" style="padding-top: 20px;">
      <footer>
          {# Create a collection of footer elements from pages found in the "/pages/footer" folder
          Use the number of columns specified in the config file, up to a maximun of 6 (allocating a minimum of 2 columns each #}
          {% set footer_collection = page.find('/footer').children %} {#.children.order('default', 'asc').slice(0, 6) %} #}
      {# Create a grid for the footer, based on the number of colums specified in the config file #}
      <div class="row">
	{% if theme_config.footer.columns %}
            {% for column in 1..theme_config.footer.columns %}
               {% set colnum = (12 // theme_config.footer.columns)  %}
               {% set fcol = attribute(footer_collection,'current') %}
               {% set next = attribute(footer_collection,'next') %}
               {% include 'partials/footer_column.html.twig' %}
           {% endfor %}
       {% endif %}
     </div>
   </footer>
  </div>
</div>
